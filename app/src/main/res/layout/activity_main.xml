            android:background="@color/gris"
            android:layout_marginTop="288dp"
            android:layout_width="100dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:textSize="40dp"
            android:layout_gravity="center|top"
            android:text="5" />
